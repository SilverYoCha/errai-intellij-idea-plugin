<idea-plugin version="2">
  <id>org.jboss.errai</id>
  <name>Errai Framework</name>
  <version>0.3</version>
  <vendor email="cbrock@redhat.com" url="http://www.jboss.org/errai/">Red Hat, Inc.</vendor>

  <description><![CDATA[
      Errai Framework Support<br>
      <small>Add code inspections and other tools for the Errai Framework to IntelliJ IDEA.</small>
      ]]></description>

  <change-notes>
    <![CDATA[
          v0.3<br>
          <small>
            <ul>
              <li>Bug fixes</li>
              <li>Support for @Model and @ModelSetter from Errai 3.0</li>
              <li>Support for auto-migration from injected @AutoBound to injected @Model</li>
              <li>Default key for jumping between templates and beans changed to Ctrl-T</li>
              <li>Various improvements and polishing.</li>
            </ul>
          </small>
          ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <depends>com.intellij.properties</depends>

  <application-components>
    <!-- Add your application components here -->
    <component>
      <implementation-class>org.jboss.errai.idea.plugin.ErraiFrameworkSupport</implementation-class>
    </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->

  </project-components>

  <actions>
    <action id="org.jboss.errai.idea.actions.TemplateToggleAction"
            class="org.jboss.errai.idea.actions.TemplateToggleAction"
            text="Toggle between Errai UI template and backing bean"
            description="Jumps between an Errai UI HTML template and the associated backing bean">
      <keyboard-shortcut keymap="$default" first-keystroke="control T"/>
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="control T"/>
      <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control T"/>
    </action>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <psi.referenceContributor
        implementation="org.jboss.errai.idea.plugin.ui.completion.TemplatePropertyReferenceContributor"/>
    <psi.referenceContributor
        implementation="org.jboss.errai.idea.plugin.databinding.completion.BeanPropertyReferenceContributor"/>
    <inspectionToolProvider implementation="org.jboss.errai.idea.plugin.ErraiUIInspectionToolProvider"/>
    <renamePsiElementProcessor
        implementation="org.jboss.errai.idea.plugin.databinding.completion.BeanPropertyRenameProcessor"/>

    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>